{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Sortie n°{{ sortie.nosortie }}{% endblock %}

{% block body %}
    <br/>
    <h2 style="text-align: center;">Afficher une sortie</h2>
    <br/>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col col-lg-5">
                <table>
                    <tr>
                        <td>Nom de la sortie :</td>
                        <td>{{ sortie.nom }}</td>
                    </tr>
                    <tr>
                        <td>Date et heure de la sortie :</td>
                        <td>{{ sortie.datedebut|date('m/d/Y') }}</td>
                    </tr>
                    <tr>
                        <td>Date limite d'inscription :</td>
                        <td>{{ sortie.datecloture|date('m/d/Y') }}</td>
                    </tr>
                    <tr>
                        <td>Nombre de places :</td>
                        <td>{{ sortie.nbinscriptionsmax }}</td>
                    </tr>
                    <tr>
                        <td>Durée :</td>
                        <td>{{ sortie.duree }} minutes</td>
                    </tr>
                    <tr>
                        <td>Decription et infos :</td>
                        <td>{{ sortie.descriptioninfos }}</td>
                    </tr>
                </table>
            </div>
            <div class="col col-lg-5">
                <table>
                    <tr>
                        <td>Lieu :</td>
                        <td>{{ sortie.lieu.nomlieu }}</td>
                    </tr>
                    <tr>
                        <td>Rue :</td>
                        <td>{{ sortie.lieu.rue }}</td>
                    </tr>
                    <tr>
                        <td>Ville :</td>
                        <td>{{ sortie.lieu.laville.nomville }}</td>
                    </tr>
                    <tr>
                        <td>Code postal :</td>
                        <td>{{ sortie.lieu.laville.codepostal }}</td>
                    </tr>
                    <tr>
                        <td>Latitude :</td>
                        <td>{{ sortie.lieu.latitude }}</td>
                    </tr>
                    <tr>
                        <td>Longitude :</td>
                        <td>{{ sortie.lieu.longitude }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}